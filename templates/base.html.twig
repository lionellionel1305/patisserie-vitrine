<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon Site{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #FEFEE0;
        }
        @keyframes textColorChange {
            25% { color: black; }
            50% { color: red; }
            75% { color: blue; }
            100% { color: purple; }
        }
        .nav-link.bubble {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px 20px;
            background-color: #FEFEE0;
            border-radius: 70px;
            font-weight: bold;
            font-size: 1.2rem;
            margin-left: 10px;
            text-align: center;
            text-decoration: none;
            animation: textColorChange 4s infinite;
            transition: background 0.6s;
        }
        #logo, #logo1 {
            transition: opacity 0.5s ease-in-out;
        }
        .nav-link.bubble:hover {
            background-color: #660099;
        }

        footer {
            background: #660099;
            color: #aaa;
            text-align: center;
            padding: 1rem;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Navbar Bootstrap -->
    <nav class="navbar navbar-expand-lg" style="background-color: #660099;">
        <div class="container">
            <!-- Logo + Nom -->
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_accueil') }}">
                <img id="logo" src="{{ asset('images/logoG.png') }}" alt="Logo" height="80" class="me-2">
                <h1 class="text-white h4 mb-0">La Pâtisserie de Lionel</h1>
            </a>
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_accueil') }}">
                <img id="logo1" src="{{ asset('images/logoD.png') }}" alt="Logo" height="80" class="me-2">
            </a>

            <!-- Burger menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarLinks" aria-controls="navbarLinks" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Liens -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarLinks">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link bubble" href="{{ path('app_accueil') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bubble" href="{{ path('app_les_pates') }}">Les types de pâtes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bubble" href="{{ path('app_viennoiserie') }}">Les viennoiseries</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bubble" href="{{ path('app_meringues') }}">Les meringues</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4 flex-fill">
        {% block body %}{% endblock %}
    </main>

    <footer class="mt-auto text-white text-lg bg-gray9800 p-4">
        <p><strong>&copy; {{ "now"|date("Y") }} La Pâtisserie de Lionel || 
        Site développé par Lionel Lebreton : 
        <a href="https://github.com/lionellionel1305" target="_blank" rel="noopener">Mon GitHub</a></strong></p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const logosG = [
            "{{ asset('images/logoG.png') }}",
            "{{ asset('images/gateau01D.png') }}",
            "{{ asset('images/gateau02D.png') }}",
            "{{ asset('images/gateau03D.png') }}",
        ];

        const logosD = [
            "{{ asset('images/logoD.png') }}",
            "{{ asset('images/logoD1.png') }}",
            "{{ asset('images/logoD3.png') }}",
            "{{ asset('images/logo1G.png') }}",
            "{{ asset('images/logo2G.png') }}"
        ];

        let indexG = 0;
        let indexD = 0;

        const logoG = document.getElementById('logo');
        const logoD = document.getElementById('logo1');

        setInterval(() => {
            indexG = (indexG + 1) % logosG.length;
            logoG.style.opacity = 0;
            setTimeout(() => {
                logoG.src = logosG[indexG];
                logoG.style.opacity = 1;
            }, 500);
        }, 4000);

        setTimeout(() => {
            setInterval(() => {
                indexD = (indexD + 1) % logosD.length;
                logoD.style.opacity = 0;
                setTimeout(() => {
                    logoD.src = logosD[indexD];
                    logoD.style.opacity = 1;
                }, 500);
            }, 4000);
        }, 3000);
    });
    </script>
</body>
</html>
